{
  "manifest_version": 3,
  "name": "crm-rota",
  "version": "1.0.0",
  "description": "A Chrome extension to automate the manual organization of CRM team members' rota schedule.",
  "permissions": ["storage"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
